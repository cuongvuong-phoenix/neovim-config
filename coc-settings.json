{
    "suggest.noselect": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescript.tsx",
        "typescriptreact",
        "json",
        "vue",
        "markdown",
        "css",
        "html",
        "dart"
    ],
    // Color highlight
    "highlight.colors.enable": false,
    
    // coc-explorer
    "explorer.width": 32,
    "explorer.openAction.strategy": "select",
    "explorer.icon.enableNerdfont": true,
    "explorer.autoExpandOptions": [
        "uncompact",
        "recursiveSingle"
    ],
    "explorer.datetime.format": "dd/MM/yyyy - HH:mm:ss",
    "explorer.file.column.indent.chars": "    ",
    "explorer.file.hiddenRules": {
        "extensions": [
            "o",
            "a",
            "obj",
            "pyc"
        ],
        "filenames": [],
        "patternMatches": [
            // Should be default
            "^.git$",
            "^.svn$",
            "^.hg$",
            "^CVS$",
            "^.DS_store$",
            "^node_modules$",
        ]
    },
    "explorer.keyMappings": {
        "i": false, // cancel default mapkey

        // Essentials
        "?": "help",
        "*": "toggleSelection",
        ".": "toggleHidden",
        "R": "refresh",
        "q": "quit",
        "<esc>": "esc",

        // Opennings
        "t": "open:tab",

        // Navigating
        "h": "collapse",
        "l": ["expandable?", "expand", "open"],
        "rl": "expandRecursive",
        "rh": "collapseRecursive",
        "<bs>": "gotoParent",
        "<2-LeftMouse>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
        "<cr>": ["expandable?", "cd", "open"],

        // Modifying
        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",
        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",

        // Searching
        "f": "search",
        "F": "searchRecursive",

        // Others
        "X": "systemExecute"
    },

    // coc-prettier
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 4,
    "prettier.printWidth": 120,
    "prettier.singleQuote": false,
    "prettier.arrowParens": "always",
    "prettier.semi": true,
    "prettier.bracketSpacing": true,

    // coc-vetur
    "vetur.format.options.tabSize": 4,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            "wrap_attributes": "force-expand-multiline",
            "print_width": 120
        },
        "prettyhtml": {
            "printWidth": 120,
            "singleQuote": false,
            "wrapAttributes": false,
            "sortAttributes": false
        }
    },
    "vetur.experimental.templateInterpolationService": true,

    // coc-flutter
    "flutter.trace.server": "messages",
    "flutter.openDevLogSplitCommand": "bot 6split"
}
