{
    "suggest.noselect": false,
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescript.tsx",
        "typescriptreact",
        "json",
        "vue",
        "markdown",
        "html",
        "css",
        "sass",
        "scss",
        "go",
        "rust",
        "dart",
        "python"
    ],
    //---------------- Color highlight --------------------
    "highlight.colors.enable": false,

    //---------------- coc-css ----------------
    "css.validate": false,

    //---------------- coc-prettier ----------------
    "prettier.printWidth": 120,
    "prettier.tabWidth": 2,
    "prettier.singleQuote": true,
    "prettier.quoteProps": "consistent",
    "prettier.trailingComma": "es5",

    //---------------- coc-vetur ----------------
    "html.autoClosingTags": true,

    //---------------- coc-vetur ----------------
    "vetur.format.options.tabSize": 4,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            "wrap_attributes": "force-expand-multiline",
            "print_width": 120
        },
        "prettyhtml": {
            "printWidth": 120,
            "singleQuote": false,
            "wrapAttributes": false,
            "sortAttributes": false
        }
    },
    "vetur.experimental.templateInterpolationService": true,

    //---------------- coc-flutter ----------------
    "flutter.trace.server": "message",
    "flutter.openDevLogSplitCommand": "bot 6split",

    //---------------- coc-rust-analyzer ----------------
    "rust-analyzer.checkOnSave.command": "clippy",

    //---------------- coc-python ----------------
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "black",
    "python.formatting.blackArgs": ["--line-length=120"],

    //---------------- coc-explorer ----------------
    "explorer.width": 32,
    "explorer.openAction.strategy": "select",
    "explorer.icon.enableNerdfont": true,
    "explorer.autoExpandOptions": [
        "uncompact",
        "recursiveSingle"
    ],
    "explorer.datetime.format": "dd/MM/yyyy - HH:mm:ss",
    "explorer.file.column.indent.chars": "    ",
    "explorer.file.hiddenRules": {
        "extensions": [
            "o",
            "a",
            "obj",
            "pyc"
        ],
        "filenames": [],
        "patternMatches": [
            // Should be default
            "^.git$",
            "^.svn$",
            "^.hg$",
            "^CVS$",
            "^.DS_store$"
            //"^node_modules$",
        ]
    },
    "explorer.keyMappings.global": {
        "i": false, // cancel default mapkey

        // Essentials
        "?": "help",
        "*": "toggleSelection",
        ".": "toggleHidden",
        "R": "refresh",
        "q": "quit",
        "<esc>": "esc",

        // Opennings
        "t": "open:tab",

        // Navigating
        "h": "collapse",
        "l": ["expandable?", "expand", "open"],
        "rl": "expandRecursive",
        "rh": "collapseRecursive",
        "<bs>": "gotoParent",
        "<2-LeftMouse>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
        "<cr>": ["expandable?", "cd", "open"],

        // Modifying
        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",
        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",

        // Searching
        "f": "search",
        "F": "searchRecursive",

        // Others
        "X": "systemExecute"
    }
}
