"-------------------------------- ESSENTIALS --------------------------------
syntax on

set autoindent
filetype plugin on
filetype plugin indent on

set hidden

set nobackup
set nowritebackup
set noswapfile
set nowrap

set mouse=a

set encoding=UTF-8
set undolevels=1000

set history=1000

set incsearch
set hlsearch

set number
set relativenumber
set ignorecase
set smartcase

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set lazyredraw

set visualbell
set noerrorbells

